{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": true
  },
  "include": [
    "data/**/*.js",
    "routes/**/*.js",
    "utils/**/*.js",
    "validators/**/*.js",
    "server.js"
  ],
  "exclude": ["node_modules", "dist"]
}
